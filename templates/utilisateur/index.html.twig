
{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <table>
        <thead>
            <th>ID</th>
            <th>Email</th>
            <th>Rôles</th>
           {# Nom prenom à ajouter #}
        </thead>
        <tbody>
            {# On boucle sur les utilisateurs #}
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.id }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>
                        {# On boucle sur les rôles #}
                        {% for role in utilisateur.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_ENTREPRISE" %}
                                Entreprise
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                      <div class="card w-75">
  <div class="card-body">
  
     <a href="{{ path('utilisateur.detail', {id: utilisateur.id}) }}" class="btn btn-primary">Voir la page information de l'utilisateur {{utilisateur.email}}</a>
    <a href="/utilisateur/modifier_utilisateur/{{utilisateur.id }}"class="btn btn-primary" >Modifier</a>
    <a href="supprimer_utilisateur/{{utilisateur.id }}"class="btn btn-primary">Supprimer l'utilisateur</a></td>
   
  </div>
</div>
                    
                
            {% else %}
                <p>Aucun utilisateur inscrit</p>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

